datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum SurveyItemType {
  Radio
  Checkbox
  TextInput
}

model Choice {
  itemId String
  survey SurveyItem @relation(fields: [itemId], references: [id])
  choice String

  // 同一SurveyItemで同じchoiceは存在しない
  @@id([itemId, choice])
}

model SurveyItem {
  id String @default(uuid())
  surveyId String 
  survey Survey @relation(fields: [surveyId], references: [id])
  type SurveyItemType
  question String
  description String?

  choices Choice[]

  answer SurveyItemAnswer[]

  @@id([id])
}

model SurveyItemAnswer {
  id String @id @default(uuid()) 
  itemId String
  surveyItem SurveyItem @relation(fields: [itemId], references: [id])
  surveyId String
  survey Survey @relation(fields: [surveyId], references: [id])
  value String
}

model Survey {
  id String @id @default(uuid())
  title String
  items SurveyItem[]
  answers SurveyItemAnswer[]
}